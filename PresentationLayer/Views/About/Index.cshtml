@using EntityLayer.Concrete
@model About

@{
    ViewData["Title"] = "Update About";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper px-4 py-3">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="card shadow-sm">
                        <div class="card-header bg-gradient-dark text-white d-flex align-items-center">
                            <i class="mdi mdi-pencil-box-outline mr-2" style="font-size: 1.5rem;"></i>
                            <h4 class="mb-0">Update About</h4>
                        </div>
                        <div class="card-body">
                            <form asp-action="Index" method="post" enctype="multipart/form-data">
                                <input type="hidden" asp-for="AboutId" />
                                <div class="row">
                                    <!-- Sol Taraf (Başlık ve Açıklama) -->
                                    <div class="col-lg-8">
                                        <div class="form-group">
                                            <label asp-for="Title">Title</label>
                                            <input asp-for="Title" class="form-control bg-dark text-white border-0" />
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Description">Description</label>
                                            <textarea asp-for="Description" class="form-control bg-dark text-white border-0" rows="6"></textarea>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Age">Age</label>
                                            <input asp-for="Age" class="form-control bg-dark text-white border-0" />
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Name">Name</label>
                                            <input asp-for="Name" class="form-control bg-dark text-white border-0" />
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Phone">Phone</label>
                                            <input asp-for="Phone" class="form-control bg-dark text-white border-0" />
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Address">Address</label>
                                            <input asp-for="Address" class="form-control bg-dark text-white border-0" />
                                        </div>
                                    </div>

                                    <!-- Sağ Taraf (Profil Resmi ve Yükleme Alanı) -->
                                    <div class="col-lg-4 text-center">
                                        <label class="text-white font-weight-bold mb-2">Upload Image</label>
                                        <input type="file" name="imageFile" class="form-control-file mb-2" />
                                        <small class="form-text text-muted">Choose an image to upload.</small>

                                        <label class="text-white font-weight-bold mt-3">Current Image</label>
                                        <div class="border p-2 d-flex justify-content-center align-items-center"
                                             style="max-width: 180px; margin: auto; border-radius: 12px;">
                                            <img src="@Model.ImageUrl" class="img-fluid rounded-circle"
                                                 style="width: 140px; height: 140px; object-fit: cover;" />
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group text-center mt-3">
                                    <button type="submit" class="btn btn-success px-4">Update</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






