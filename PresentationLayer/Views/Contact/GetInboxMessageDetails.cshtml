@model EntityLayer.Concrete.Message
@{
    ViewData["Title"] = "GetInboxMessageDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Message Detail</h4>
            <div class="form-group">
                <label for="SenderName">Sender Name</label>
                <input type="text" class="form-control bg-dark text-white" id="SenderName" value="@Model.Name" readonly>
            </div>
            <div class="form-group">
                <label for="SenderMail">Sender Email</label>
                <input type="text" class="form-control bg-dark text-white" id="SenderMail" value="@Model.Mail" readonly>
            </div>
            <div class="form-group">
                <label for="Content">Content</label>
                <input type="text" class="form-control bg-dark text-white" id="Subject" value="@Model.Content" readonly>
            </div>
            <div class="form-group">
                <label for="MessageDate">Message Date</label>
                <input type="text" class="form-control bg-dark text-white" id="MessageDate" value="@Model.Date.ToString("g")" readonly>
            </div>
            <div class="form-group text-center">
                <a href="/Contact/Index/" class="btn btn-primary">Back to Inbox</a>
            </div>
        </div>
    </div>
</div>



