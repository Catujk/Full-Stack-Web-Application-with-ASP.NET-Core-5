@using EntityLayer.Concrete
@model List<Portfolio>

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Project</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <td> #</td>
                                <th> Project Name </th>
                                <th> Project URL </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td> @item.PortfolioId </td>
                                    <td>
                                        <img src="@item.ImageUrl1" alt="image" class="img-thumbnail" style="max-width: 50px;" />
                                        <img src="@item.ImageUrl2" alt="image" class="img-thumbnail" style="max-width: 50px;" />
                                        <span class="pl-2">@item.Name</span>
                                    </td>
                                    <td>
                                        <a href="@item.ProjectUrl" class="btn btn-primary btn-sm" target="_blank">Visit Project</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>






