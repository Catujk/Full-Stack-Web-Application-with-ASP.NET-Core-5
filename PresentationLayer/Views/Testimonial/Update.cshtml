@model EntityLayer.Concrete.Testimonial

@{
    ViewData["Title"] = "Update Testimonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Update Testimonial</h4>
            <form asp-action="Update" method="post" class="forms-sample">
                <input type="hidden" asp-for="TestimonialId" />
                <div class="form-group">
                    <label asp-for="ClientName">Client Name</label>
                    <input asp-for="ClientName" class="form-control bg-dark text-white border-0" placeholder="Enter client name" required>
                </div>
                <div class="form-group">
                    <label asp-for="Company">Company</label>
                    <input asp-for="Company" class="form-control bg-dark text-white border-0" placeholder="Enter company name" required>
                </div>
                <div class="form-group">
                    <label asp-for="Comment">Comment</label>
                    <textarea asp-for="Comment" class="form-control bg-dark text-white border-0" rows="6" placeholder="Enter comment" required></textarea>
                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl">Image URL</label>
                    <input asp-for="ImageUrl" class="form-control bg-dark text-white border-0" placeholder="Enter image URL">
                </div>
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary mr-2">Update</button>
                    <a asp-action="Index" class="btn btn-light">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>





