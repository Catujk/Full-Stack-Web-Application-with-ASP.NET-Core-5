@using EntityLayer.Concrete
@model Feature

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper px-4 py-3">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-gradient-dark text-white text-center">
                        <h4 class="mb-0">Feature Details</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="Index" method="post">
                            <input type="hidden" asp-for="FeatureId" />
                            <div class="form-group">
                                <label asp-for="Header">Header</label>
                                <input asp-for="Header" class="form-control bg-dark text-white border-0" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Name">Name</label>
                                <input asp-for="Name" class="form-control bg-dark text-white border-0" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Title">Title</label>
                                <textarea asp-for="Title" class="form-control bg-dark text-white border-0" rows="4"></textarea>
                            </div>
                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-success px-4">Save</button>
                                <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


