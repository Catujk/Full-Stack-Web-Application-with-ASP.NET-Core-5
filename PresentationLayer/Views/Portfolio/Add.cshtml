@model EntityLayer.Concrete.Portfolio

@{
    ViewData["Title"] = "Add New Portfolio";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper px-4 py-3">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-gradient-dark text-white text-center">
                        <h4 class="mb-0">Add New Portfolio</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="Add" method="post">
                            <div class="form-group">
                                <label asp-for="Name">Name</label>
                                <input asp-for="Name" class="form-control bg-dark text-white border-0" required />
                            </div>
                            
                            <div class="form-group">
                                <label asp-for="ProjectUrl">Project URL</label>
                                <input asp-for="ProjectUrl" class="form-control bg-dark text-white border-0" />
                            </div>
                            <div class="form-group">
                                <label asp-for="ImageUrl1">Image URL</label>
                                <input asp-for="ImageUrl1" class="form-control bg-dark text-white border-0" />
                            </div>
                            <div class="form-group">
                                <label asp-for="ImageUrl2">Image URL</label>
                                <input asp-for="ImageUrl2" class="form-control bg-dark text-white border-0" />
                            </div>
                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-success px-4">Add</button>
                                <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
