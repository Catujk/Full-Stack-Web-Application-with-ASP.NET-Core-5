@using EntityLayer.Concrete
@model List<SocialMedia>

@{
    ViewData["Title"] = "Social Media";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper px-4 py-3">
        <div class="card shadow-sm">
            <div class="card-header bg-gradient-dark text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Social Media</h4>
                <a asp-action="Add" class="btn btn-success">+ Add New</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-dark table-hover">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>URL</th>
                                <th>Icon</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Url</td>
                                    <td>@item.Icon</td>
                                    <td>@(item.Status ? "Active" : "Inactive")</td>
                                    <td>
                                        <a asp-action="Update" asp-route-id="@item.SocialMediaId" class="btn btn-warning btn-sm">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@item.SocialMediaId" class="btn btn-danger btn-sm">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>







