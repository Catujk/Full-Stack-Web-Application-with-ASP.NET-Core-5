@model EntityLayer.Concrete.Service

@{
    ViewData["Title"] = "Update Service";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper px-4 py-3">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-gradient-dark text-white text-center">
                        <h4 class="mb-0">Update Service</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="Update" method="post">
                            <input type="hidden" asp-for="ServiceId" />
                            <div class="form-group">
                                <label asp-for="Title">Service Name</label>
                                <input asp-for="Title" class="form-control bg-dark text-white border-0" required />
                            </div>
                            <div class="form-group text-center">
                                <label class="text-white font-weight-bold">Current Image</label>
                                <div class="border p-2 bg-secondary d-flex justify-content-center align-items-center"
                                     style="max-width: 200px; margin: auto; border-radius: 12px;">
                                    <img src="@Model.ImageUrl" class="img-fluid rounded" style="width: 150px; height: 150px; object-fit: cover;" />
                                </div>
                            </div>

                            <div class="form-group">
                                <input type="file" name="NewImage" class="form-control-file" />
                                <small class="form-text text-muted">If you don't select a new image, the current one will remain.</small>
                            </div>
                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-warning px-4">Update</button>
                                <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
