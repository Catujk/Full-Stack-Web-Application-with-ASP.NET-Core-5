@model EntityLayer.Concrete.Service

@{
    ViewData["Title"] = "Add New Service";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper px-4 py-3">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-gradient-dark text-white text-center">
                        <h4 class="mb-0">Add New Service</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="Add" method="post">
                            <div class="form-group">
                                <label asp-for="Title">Service Name</label>
                                <input asp-for="Title" class="form-control bg-dark text-white border-0" required />
                            </div>
                            <div class="form-group">
                                <label asp-for="ImageUrl">Upload Image</label>
                                <input type="file" name="ImageUrl" class="form-control-file" required />
                                <small class="form-text text-muted">Choose an image to upload.</small>
                            </div>
                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-success px-4">Add</button>
                                <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
