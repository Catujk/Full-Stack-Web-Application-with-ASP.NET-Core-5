@using EntityLayer.Concrete
@model List<Experience>

@{
    ViewData["Title"] = "Experiences";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper px-4 py-3">
        <div class="card shadow-sm">
            <div class="card-header bg-gradient-dark text-white d-flex justify-content-between align-items-center">
                <h4 class="mb-0">Experiences</h4>
                <a asp-action="Add" class="btn btn-success">+ Add New</a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-dark table-hover">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var exp in Model)
                            {
                                <tr>
                                    <td>@exp.Name</td>
                                    <td>@(exp.Description.Length > 50 ? exp.Description.Substring(0, 100) + "..." : exp.Description)</td>
                                    <td>
                                        <a asp-action="Update" asp-route-id="@exp.ExperienceId" class="btn btn-warning btn-sm">Edit</a>
                                        <a asp-action="Delete" asp-route-id="@exp.ExperienceId" class="btn btn-danger btn-sm">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
