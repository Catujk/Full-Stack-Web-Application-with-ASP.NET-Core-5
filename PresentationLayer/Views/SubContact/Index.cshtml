@using EntityLayer.Concrete
@model Contact

@{
    ViewData["Title"] = "Update Contact";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper px-4 py-3">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="card shadow-sm">
                        <div class="card-header bg-gradient-dark text-white d-flex align-items-center">
                            <i class="mdi mdi-pencil-box-outline mr-2" style="font-size: 1.5rem;"></i>
                            <h4 class="mb-0">Update Contact</h4>
                        </div>
                        <div class="card-body">
                            <form asp-action="Index" method="post">
                                <input type="hidden" asp-for="ContactId" />
                                <div class="form-group">
                                    <label asp-for="Title">Title</label>
                                    <input asp-for="Title" class="form-control bg-dark text-white border-0" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description">Description</label>
                                    <textarea asp-for="Description" class="form-control bg-dark text-white border-0" rows="6"></textarea>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Mail">Mail</label>
                                    <input asp-for="Mail" class="form-control bg-dark text-white border-0" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Phone">Phone</label>
                                    <input asp-for="Phone" class="form-control bg-dark text-white border-0" />
                                </div>
                                <div class="form-group text-center mt-3">
                                    <button type="submit" class="btn btn-success px-4">Update</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>








